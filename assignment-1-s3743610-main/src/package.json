{
  "name": "notes-app",
  "version": "1.0.0",
  "description": "RMIT COSC2759 Assignment 1 - Notes app with CI",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest --ci --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "lint": "eslint .",
    "package": "bash -lc 'rm -rf package && mkdir -p package && cp -r app.js routes models views public package.json package-lock.json .env.example package/ && cd package && zip -r ../app-artifact.zip .'",
    "test:unit": "jest --runInBand --testPathPattern=tests/unit",
    "test:integration": "jest --runInBand --coverage --testPathPattern=tests/integration",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "dotenv": "16.6.1",
    "ejs": "3.1.10",
    "express": "4.21.2",
    "mongoose": "8.18.0"
  },
  "devDependencies": {
    "@eslint/js": "9.14.0",
    "@playwright/test": "1.47.2",
    "@types/jest": "29.5.14",
    "eslint": "9.34.0",
    "globals": "15.11.0",
    "jest": "29.7.0",
    "supertest": "6.3.4",
    "wait-on": "7.2.0"
  }
}
